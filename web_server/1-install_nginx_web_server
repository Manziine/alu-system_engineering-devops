#!/usr/bin/env bash
# Installs and configures Nginx web server to serve Holberton School page

# Install Nginx with automatic yes to prompts
apt-get update
apt-get install -y nginx

# Create the index.html file with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Configure Nginx to listen on port 80 (default configuration usually does this)
# Restart Nginx without using systemctl
service nginx restart

# Verify Nginx is running and listening on port 80
netstat -tulnp | grep nginx

# Display the result of querying the server
echo "Installation complete. Test with:"
echo "curl localhost"
